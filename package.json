{
  "name": "match_colors",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": {
    "name": "Roy Messi"
  },
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "scss:init": "node-sass -r src/scss -o src/styles --output-style=compressed",
    "scss:watch": "node-sass -w -r src/scss -o src/styles --output-style=compressed",
    "preview": "vite preview",
    "build:dev": "vite build --mode development && node src/after_dev_build.js",
    "build:prod": "vite build --mode production",
    "deploy:site": "node src/deploy_site.js"
  },
  "devDependencies": {
    "dotenv": "^16.0.3",
    "node-sass": "^8.0.0",
    "vite": "^4.1.0",
    "vite-plugin-minify": "^1.5.2"
  }
}
